{
	"compilerOptions": {
		"target": "ES2021",
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"baseUrl": "./src/"
	},
	"include": ["next-env.d.ts", "**/*.ts"],
	"exclude": ["node_modules"]
}
